<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mytrainapp">
    <!-- for internet permission -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- for live location permission but still we need to give permission in java runtime -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ActivityLiveStatus"></activity>
        <activity android:name=".ActivityPNRStatus" />
        <activity android:name=".MapActivity" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyBJfwvYj1te1KC8sbCFxBQKrQ-TbzhY1Bc" />

        <activity
            android:name=".NavigationDrawerActivity"
            android:label="@string/title_activity_navigation_drawer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ActivityTrainSearch" />
        <activity android:name=".ActivityTicketDetails" />
        <activity android:name=".ActivityBookTicket" />
        <activity android:name=".ActivitySocial" />
        <activity android:name=".ActivityProfileView" />
        <activity android:name=".ActivityRegister" />
        <activity
            android:name=".ActivityTrainAppLogin"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>